{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "css": {
      "transforms": [
        "attribute/cti",
        "name/cti/kebab",
        "time/seconds",
        "content/icon",
        "size/pxToRem",
        "color/css"
      ],
      "prefix": "sd",
      "buildPath": "build/css/",
      "files": [
        {
          "destination": "_tokens.css",
          "format": "css/variables"
        }
      ]
    },
    "js": {
      "transforms": [
        "attribute/cti",
        "name/cti/pascal",
        "size/pxToRem",
        "color/hex"
      ],
      "buildPath": "build/js/",
      "files": [
        {
          "destination": "tokens.js",
          "format": "javascript/es6"
        }
      ]
    }
  }
}
